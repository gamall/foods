@model Syngenta.Web.FoodStandards.German.Models.LoginModel

@{
    ViewBag.Title = "Einloggen";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

@section Banner{
    <div id="imageRotation" class="darkOrangeBackground"><img class="floatLeft" src="~/images/headers/login-image.jpg" width="640" height="250" alt="" />
      <div id="introText">
        @*<p class="spaceBefore40"><strong>Assuring Food Supplies; Safety, Security and Quality – A guide to pesticide residues</strong> has been created using innovative E-book publication technology that enables you to uniquely select pages at the required level of detail on each of the different topic areas. You can select, save, print or email your own different versions, according to your customers' demands. </p>
        <p>Registered users can login below, using your Syngenta email and password</p>*@
          <p class="fontsize11 spaceBefore30">Der Leitfaden zu Rückständen von Pflanzenschutzmitteln &#8211; <strong>&#8222;Die Sicherung der Nahrungsmittelversorgung: Sicherheit und Qualität&#8220;</strong></strong> &#8211; wurde mit einer innovativen e-Book Publikationstechnologie erstellt, welche es Ihnen ermöglicht, die einzelnen Seiten je nach gewünschtem Themengebiet und nötigem Detailierungsgrad aufzurufen. Sie können Ihre selbst zusammengestellten Versionen, gemäss den Wünschen Ihres Kunden, auswählen, sichern, drucken und per E-Mail versenden. </p>
          <p class="fontsize11">Registrierte Benutzer können sich einloggen, indem sie ihre Syngenta E-Mail Adresse und das erhaltene Passwort eingeben.</p>
        <p><strong>Noch nicht registriert?</strong> <a href="~/register">Jetzt anmelden <img src="~/images/common/whitearrowonorange.gif" width="15" height="15" alt="" /></a></p>
      </div>
      <div class="clear"></div>
    </div>
    <div class="clear"></div>
}

  <div id="mainContent" class="login">
    <div id="col1">
      <h2>Geben Sie Ihre Login-Daten ein</h2>
      @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-form" }))      
      {
        @Html.AntiForgeryToken()        

        <table id="regTable" width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="90" align="left" valign="middle">
              <label for="email">E-Mail Adresse</label>
            </td>
            <td width="285" align="left">
              @Html.TextBoxFor(m => m.UserName, new { @class = "width275", Name = "Email", Id = "Email", autocomplete = "off" })
            </td>
            <td width="15" align="left">&nbsp;</td>
            <td width="70" align="left">
              <label for="password">Passwort</label>
            </td>
            <td width="285" align="left">
              @Html.PasswordFor(m => m.Password, new { @class = "width275", Name = "Password", Id = "Password", autocomplete = "off" })
            </td>
            <td width="15" align="left">&nbsp;</td>
            <td align="left">
                <a href="#" id="butLogin">Senden <img src="~/images/common/orangearrowongrey.gif" width="15" height="15" alt="" /></a> 
            </td>
          </tr>
          <tr>
            <td align="left" valign="middle">&nbsp;</td>
            <td align="left">&nbsp;</td>
            <td align="left">&nbsp;</td>
            <td align="left">&nbsp;</td>
            <td align="right" valign="top"><a style="font-weight: normal; color: #878787;" href="~/forgottenpassword">Passwort vergessen?</a></td>
            <td align="left">&nbsp;</td>
            <td align="left">&nbsp;</td>
          </tr>
        </table>
        <p class="errorMessage hide highlite">Bitte vervollständigen Sie die rot markierten Felder.</p>
        <p class="errorMessage hide email">E-Mail-Adresse ist in einem falschen Format, bitte korrigieren Sie das Format und versuchen Sie es erneut.</p>
        <p class="errorMessage hide invalid">Ungültige E-Mail-Adresse.</p>
        <p class="errorMessage server">@ViewBag.Message</p>
        @Html.ValidationSummary(true)        
      }
    </div>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
  <div class="height30"></div>

@section Body {
    <script src="~/scripts/page-specific/login.js" type="text/javascript"></script>
}