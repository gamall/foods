@model Syngenta.Web.FoodStandards.Spanish.Models.LoginModel

@{
    ViewBag.Title = "Admin Login";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

@section Banner{
    <div id="imageRotation" class="darkOrangeBackground"><img class="floatLeft" src="~/images/headers/login-image.jpg" width="640" height="250" alt="" />
      <div id="introText">
          <p class="fontsize11 spaceBefore40"><strong>&quot;Comprometidos con la seguridad alimentaria y la calidad de los alimentos. Una guía sobre los residuos de los productos de protección de cultivos&quot;</strong> se ha creado con la innovadora tecnología de publicación de libros electrónicos que le permite seleccionar únicamente páginas en el nivel de detalle requerido en cada una de las diferentes áreas temáticas. Puede seleccionar, guardar, imprimir o enviar sus propias versiones diferentes, de acuerdo a las demandas de sus clientes.</p>
      </div>
      <div class="clear"></div>
    </div>
    <div class="clear"></div>
}

  <div id="mainContent" class="login">
    <div id="col1">
      <h2>Introduzca sus datos de acceso</h2>
      @using (Html.BeginForm("login", "Admin", FormMethod.Post, new { id = "login-form" }))      
      {
        @Html.AntiForgeryToken()        

        <table id="regTable" width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="90" align="left" valign="middle">
                <label for="email">
                    Correo <br />
                    electrónico
                </label>
            </td>
            <td width="285" align="left">
              @Html.TextBoxFor(m => m.UserName, new { @class = "width275", Name = "Email", Id = "Email", autocomplete = "off" })
            </td>
            <td width="15" align="left">&nbsp;</td>
            <td width="70" align="left">
              <label for="password">Contraseña</label>
            </td>
            <td width="285" align="left">
              @Html.PasswordFor(m => m.Password, new { @class = "width275", Name = "Password", Id = "Password", autocomplete = "off" })
            </td>
            <td width="15" align="left">&nbsp;</td>
            <td align="left">
                <a href="#" id="butAdminLogin">Continuar <img src="~/images/common/orangearrowongrey.gif" width="15" height="15" alt="" /></a> 
            </td>
          </tr>
          <tr>
            <td align="left" valign="middle">&nbsp;</td>
            <td align="left">&nbsp;</td>
            <td align="left">&nbsp;</td>
            <td align="left">&nbsp;</td>
            <td align="right"></td>
            <td align="left">&nbsp;</td>
            <td align="left">&nbsp;</td>
          </tr>
        </table>
        <p class="errorMessage hide server">@ViewBag.Message</p>
        <p class="errorMessage hide blank">Por favor, introduzca la dirección de correo electrónico y contraseña.</p>
        <p class="errorMessage hide incorrect">La dirección de correo electrónico o contraseña facilitada no es correcto.</p>
        @Html.ValidationSummary(true)        
      }
    </div>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
  <div class="height30"></div>