@model Syngenta.Web.FoodStandards.Spanish.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

@section Banner{
    <div id="imageRotation" class="darkOrangeBackground"><img class="floatLeft" src="~/images/headers/login-image.jpg" width="640" height="250" alt="" />
      <div id="introText">
        @*<p class="spaceBefore40"><strong>Assuring Food Supplies; Safety, Security and Quality – A guide to pesticide residues</strong> has been created using innovative E-book publication technology that enables you to uniquely select pages at the required level of detail on each of the different topic areas. You can select, save, print or email your own different versions, according to your customers' demands. </p>
        <p>Registered users can login below, using your Syngenta email and password</p>*@
          <p class="fontsize11 spaceBefore30"><strong>&quot;Comprometidos con la seguridad alimentaria y la calidad de los alimentos. Una guía sobre los residuos de los productos de protección de cultivos&quot;</strong> se ha creado con la innovadora tecnología de publicación de libros electrónicos que le permite seleccionar únicamente páginas en el nivel de detalle requerido en cada una de las diferentes áreas temáticas. Puede seleccionar, guardar, imprimir o enviar sus propias versiones diferentes, de acuerdo a las demandas de sus clientes.</p>
          <p class="fontsize11">Los usuarios registrados pueden acceder a continuación, utilizar el correo electrónico y la contraseña de Syngenta.</p>
        <p><strong>Todavía no se ha registrado?</strong> <a href="~/register">Regístrate ahora <img src="~/images/common/whitearrowonorange.gif" width="15" height="15" alt="" /></a></p>
      </div>
      <div class="clear"></div>
    </div>
    <div class="clear"></div>
}

  <div id="mainContent" class="login">
    <div id="col1">
      <h2>Introduzca sus datos de acceso</h2>
      @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-form" }))      
      {
        @Html.AntiForgeryToken()        

        <table id="regTable" width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="90" align="left" valign="middle">
                <label for="email">
                    Correo <br />
                    electrónico
                </label>
            </td>
            <td width="285" align="left">
              @Html.TextBoxFor(m => m.UserName, new { @class = "width275", Name = "Email", Id = "Email", autocomplete = "off" })
            </td>
            <td width="15" align="left">&nbsp;</td>
            <td width="70" align="left">
              <label for="password">Contraseña</label>
            </td>
            <td width="285" align="left">
              @Html.PasswordFor(m => m.Password, new { @class = "width275", Name = "Password", Id = "Password", autocomplete = "off" })
            </td>
            <td width="15" align="left">&nbsp;</td>
            <td align="left">
                <a href="#" id="butLogin">Continuar <img src="~/images/common/orangearrowongrey.gif" width="15" height="15" alt="" /></a> 
            </td>
          </tr>
          <tr>
            <td align="left" valign="middle">&nbsp;</td>
            <td align="left">&nbsp;</td>
            <td align="left">&nbsp;</td>
            <td align="left">&nbsp;</td>
            <td align="right" valign="top"><a style="font-weight: normal; color: #878787;" href="~/forgottenpassword">¿He olvidado la contraseña?</a></td>
            <td align="left">&nbsp;</td>
            <td align="left">&nbsp;</td>
          </tr>
        </table>
        <p class="errorMessage hide highlite">Rellene los campos resaltados en rojo.</p>
        <p class="errorMessage hide email">La dirección de correo electrónico tiene un formato incorrecto; por favor, corrija el formato y vuelva a intentarlo.</p>
        <p class="errorMessage hide invalid">La dirección de correo electrónico no es válida.</p>
        <p class="errorMessage server">@ViewBag.Message</p>
        @Html.ValidationSummary(true)        
      }
    </div>
    <div class="clear"></div>
  </div>
  <div class="clear"></div>
  <div class="height30"></div>

@section Body {
    <script src="~/scripts/page-specific/login.js" type="text/javascript"></script>
}