@model Syngenta.Core.UserBook

@{
    ViewBag.Title = "Previsualización";
    Layout = "~/Views/Shared/_PrivateLayout.cshtml";
}

@section Banner{

    @Html.Hidden("SelectedPages", (object)ViewBag.SelectedPages)

    <div id="pageAssembly">
        <div id="leftArrow" class="floatLeft"><a href="#"><img id="leftSideArrow" src="~/images/common/leftarrowlarge.gif" width="28" height="27" alt="" /></a></div>
        <div id="leftPageFrame" class="floatLeft">
            <div id="leftPage"></div>
            <div class="addPage">
                <div align="left">
                    <a href="#" id="linkRemoveLeft" class="leftlink">X Pulse para eliminar esta página</a>
                </div>
            </div>
        </div>
        <div id="rightPageFrame" class="floatLeft">
            <div id="rightPage"></div>
            <div class="addPage">
                <div align="right">
                    <a href="#" id="linkRemoveRight" class="rightlink">X Pulse para eliminar esta página</a>
                </div>
            </div>
        </div>
        <div id="rightArrow" class="floatLeft"><a href="#"><img id="rightSideArrow" src="~/images/common/rightarrowlarge.gif" width="28" height="27" alt="" /></a></div>
        <div class="clear"></div>
        <div id="addLeft"></div>
        <div id="addRight"></div>
        <div id="preview" align="center">
            <p><a id="butAssembly" href="~/assembly">Cerrar previsualización<img src="~/images/common/greenarrowondarkgrey.gif" width="16" height="15" alt="" /></a></p>
        </div>
    </div>

}

<div class="clear"></div>
<div class="height30"></div>

@section Body {
    <script src="~/scripts/page-specific/preview.js" type="text/javascript"></script>
}